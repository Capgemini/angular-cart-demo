{
  "id": "angular-cart",
  "instances": 2,
  "cpus": 1,
  "mem": 512,
  "labels": {
    "DCOS_PACKAGE_NAME": "angular-cart",
    "DCOS_PACKAGE_IS_FRAMEWORK": "false",
    "DCOS_PACKAGE_VERSION": "0.2.0"
  },
  "healthChecks": [
    {
      "gracePeriodSeconds": 120,
      "intervalSeconds": 15,
      "maxConsecutiveFailures": 10,
      "path": "/",
      "portIndex": 0,
      "protocol": "HTTP",
      "timeoutSeconds": 5
    }
  ],
  "upgradeStrategy": {
    "minimumHealthCapacity": 2.0
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "capgemini/angular-cart-demo:$tag",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 0,
          "servicePort": 8080,
          "protocol": "tcp"
        }
      ]
    }
  }
}
